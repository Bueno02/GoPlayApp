<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EntraGameActivity">
    <ImageView
            android:layout_width="130dp"
            android:layout_height="129dp" app:srcCompat="@mipmap/ic_quadra_futsal"
            android:id="@+id/imageView"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="33dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewTipodeJogo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:layout_width="273dp"
            android:layout_height="115dp"
            android:id="@+id/textViewDescription"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textViewQntdJoga"
            app:layout_constraintTop_toBottomOf="@+id/textViewQntdJoga" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonpt"/>
    <TextView
            android:layout_width="273dp"
            android:layout_height="55dp"
            android:id="@+id/textViewQntdJoga"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp" app:layout_constraintTop_toBottomOf="@+id/textViewLocal"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textViewDescription"/>
    <TextView
            android:layout_width="270dp"
            android:layout_height="67dp"
            android:id="@+id/textViewLocal"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTipodeJogo" android:layout_marginBottom="35dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewQntdJoga"
            app:layout_constraintBottom_toTopOf="@+id/textViewQntdJoga"
            app:layout_constraintStart_toStartOf="@+id/textViewTipodeJogo" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:id="@+id/textViewTipodeJogo"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="34dp" app:layout_constraintBottom_toTopOf="@+id/textViewLocal"/>
    <Button
            android:text="Participar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonpt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>