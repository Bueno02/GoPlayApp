<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tatics"
    >


        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/scrollView4"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
            <!-- Here you put the rest of your current view-->

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:context=".EntraGameActivity">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="414dp"
                        android:layout_height="1078dp"
                        android:id="@+id/constraintLayout5"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toEndOf="parent">
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView

                        android:id="@+id/imageView"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:tint="#00FF0000"
                        app:srcCompat="@mipmap/ic_quadra_futsal"
                        android:layout_marginTop="52dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.505"/>


                <TextView
                        android:textColor="#F0FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/drawable_edit_green_round"
                        android:id="@+id/textViewHorario"
                        android:layout_width="270dp"
                        android:layout_height="46dp"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLocal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
                        android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.487"
                />

                <TextView
                        android:textColor="#F0FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/drawable_edit_green_round"
                        android:id="@+id/textViewTipodeJogo"
                        android:layout_width="270dp"
                        android:layout_height="46dp"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
                        android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="28dp"
                        app:layout_constraintHorizontal_bias="0.536"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

                <TextView
                        android:textColor="#F0FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/drawable_edit_green_round"
                        android:id="@+id/textViewDescription"
                        android:layout_width="270dp"
                        android:layout_height="90dp"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewQntdJoga"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
                        android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.536"/>

                <TextView
                        android:background="@drawable/drawable_edit_green_round"
                        android:textColor="#F0FFFFFF"
                        android:gravity="center"
                        android:id="@+id/textViewQntdJoga"
                        android:layout_width="270dp"
                        android:layout_height="46dp"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
                        android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="28dp"
                        app:layout_constraintHorizontal_bias="0.536"
                        app:layout_constraintTop_toBottomOf="@+id/textViewHorario"/>

                <TextView
                        android:textColor="#F0FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/drawable_edit_green_round"
                        android:id="@+id/textViewLocal"
                        android:layout_width="270dp"
                        android:layout_height="46dp"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewTipodeJogo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
                        android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintHorizontal_bias="0.487"/>

                <Button
                        android:text="Participar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonpt"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <ListView
                        android:background="@drawable/drawable_edit_white_round"
                        android:layout_width="272dp"
                        android:layout_height="234dp"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="71dp"
                        android:layout_marginStart="71dp" android:layout_marginEnd="71dp"
                        android:layout_marginRight="71dp"
                        app:layout_constraintEnd_toEndOf="parent" android:id="@+id/list_users_insc"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>