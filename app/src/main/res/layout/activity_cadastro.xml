<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewGame" android:background="@android:color/background_light">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            android:id="@+id/editTextNome"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:hint="E-mail"
            android:ems="10"
            android:id="@+id/editTextEmail"
            app:layout_constraintBottom_toTopOf="@+id/editTextSenha" android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="@+id/editTextIdade"
            app:layout_constraintEnd_toEndOf="@+id/editTextConfirmaSenha"/>
    <EditText
            android:layout_width="209dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:hint="Confirmar Senha"
            android:ems="10"
            android:id="@+id/editTextConfirmaSenha"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonCriar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="209dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:hint="Senha"
            android:ems="10"
            android:id="@+id/editTextSenha"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextConfirmaSenha"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Idade"
            android:ems="10"
            android:id="@+id/editTextIdade"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPos2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="@+id/editTextPos2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Posição 1"
            android:ems="10"
            android:id="@+id/editTextPos1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextPos2"
            app:layout_constraintStart_toStartOf="@+id/editTextNome"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Posição 2"
            android:ems="10"
            android:id="@+id/editTextPos2"
            android:layout_marginTop="172dp"
            android:layout_marginBottom="171dp" app:layout_constraintTop_toTopOf="@+id/editTextNome"
            app:layout_constraintStart_toStartOf="@+id/editTextPos1"
            app:layout_constraintBottom_toBottomOf="@+id/editTextEmail"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCriar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>